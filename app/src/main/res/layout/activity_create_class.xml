<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.main.classroom.CreateClassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <com.google.android.material.appbar.MaterialToolbar
                app:titleTextAppearance="@style/ToolBarrTextAppereance"
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Create Class"
                app:navigationIcon="@drawable/ic_arrow_left"
                app:navigationIconTint="@color/blue"
                app:titleTextColor="@color/blue"/>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Name"
                android:textColor="@color/blue"
                app:fontFamily="@font/inter_bold"
                android:textSize="16sp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_class_name"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: Math Class">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_class_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Code"
                android:textColor="@color/blue"
                app:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_class_code"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Example: MT70123">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_class_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/blue"
                app:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_class_desc"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tell a brief about the class">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_class_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_class"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Class"
                style="@style/Widget.Material3.Button"
                android:fontFamily="@font/inter_bold"
                android:textSize="15sp"
                android:layout_marginTop="12dp"
                app:iconSize="20sp"
                app:iconGravity="start"
                app:fontFamily="@font/inter_bold"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>