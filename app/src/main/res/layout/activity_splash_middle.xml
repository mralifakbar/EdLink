<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.splashscreen.SplashMiddleActivity">

    <LinearLayout
        android:layout_weight="1"
        android:background="@color/green_primary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:paddingLeft="22dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_slider_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/inter_extrabold"
                    app:fontFamily="@font/inter_extrabold"
                    android:text="Empowering Online Education in your hand."
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_slider_item"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/slider_ms_1">
                </ImageView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_primary"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            style="@style/CustomCardCorners">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp"
                >
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_with_siakad"
                    android:padding="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue with Siakad"
                    style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                    app:icon="@drawable/ic_siakad"
                    app:iconTint="@null"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/inter_bold"
                    android:backgroundTint="@color/white"
                    android:textSize="15sp"
                    app:iconSize="20sp"
                    app:iconGravity="start"
                    app:fontFamily="@font/inter_bold"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="5dp"
                    android:id="@+id/login_with_google"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@id/login_with_siakad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue with Google"
                    style="@style/Widget.Material3.Button.ElevatedButton.Icon"
                    app:icon="@drawable/ic_google"
                    app:iconTint="@null"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/inter_bold"
                    android:backgroundTint="@color/white"
                    android:textSize="15sp"
                    app:iconSize="20sp"
                    app:iconGravity="start"
                    app:fontFamily="@font/inter_bold"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="5dp"
                    android:id="@+id/login_with_email"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:paddingLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@id/login_with_google"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    style="@style/Widget.Material3.Button"
                    app:iconTint="@null"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="15sp"
                    app:iconSize="20sp"
                    app:iconGravity="start"
                    app:fontFamily="@font/inter_bold"/>
                <LinearLayout
                    android:id="@+id/btn_regis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/login_with_email"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have account yet?"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:layout_marginRight="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:text="Register Now"
                        android:textColor="@color/green_primary"
                        android:padding="0dp"
                        android:layout_margin="0dp"
                        android:paddingLeft="8dp"/>
                </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.CardView.Filled"
                    android:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_konfir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/termsandprivacy"
                        android:textColor="@color/blue"
                        style="@style/Widget.Material3.CheckedTextView"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="10dp"/>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</LinearLayout>